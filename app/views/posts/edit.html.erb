<%= form_for @post do |f| %>
  <%= f.label 'Post Title' %><br>
  <%= f.text_field :title, id: "title"%><br>

  <%= f.label 'Post Description' %><br>
  <%= f.text_area :description, id: "description" %><br>

  <%= f.submit "Submit Post" %>
<% end %>

<!-- form for knows this is not a new instance of the post class ==knows its supposed to update not create new. -->
